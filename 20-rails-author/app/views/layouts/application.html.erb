<!DOCTYPE html>
<html>
  <head>
    <title>Gitdown</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= form_tag("/sessions", method: :delete) do %>
        <%= submit_tag "Logout" %>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
